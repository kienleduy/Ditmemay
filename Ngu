local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/jensonhirst/Orion/main/source')))()
local Window = OrionLib:MakeWindow({
    Name = "ALL-IN-ONE MENU ðŸ‘º",
    HidePremium = true,
    SaveConfig = false,
    IntroEnabled = false
})

local MainTab = Window:MakeTab({Name = "Main"})
local SkillTab = Window:MakeTab({Name = "Auto Skill"})
local FruitTab = Window:MakeTab({Name = "Fruit"})
local RandomTab = Window:MakeTab({Name = "Random & Lucky"})
local MiscTab = Window:MakeTab({Name = "Misc"})

local LocalPlayer = game.Players.LocalPlayer
local killAuraEnabled = false
local selectedTargetName = "ChÆ°a chá»n"
local targetList = {"ChÆ°a chá»n", "Siu_Owner"}
local dropdown

-- [HÃ€M KILL CHUáº¨N NÃ Gá»¬I]
local function refreshTargetList()
    targetList = {"ChÆ°a chá»n", "Siu_Owner"}
    local npcFolder = workspace:FindFirstChild("NPC DAMAGE")
    if npcFolder then
        for _, model in ipairs(npcFolder:GetChildren()) do
            if model:IsA("Model") and model:FindFirstChildWhichIsA("Humanoid") then
                if model.Name ~= "Siu_Owner" then table.insert(targetList, model.Name) end
            end
        end
    end
    if dropdown then dropdown:Refresh(targetList, true) end
end

local function killTarget(model)
    if not model then return end
    local hum = model:FindFirstChildWhichIsA("Humanoid")
    if hum and hum.Health > 0 then
        task.spawn(function()
            for i = 1, 10 do 
                if hum.Health <= 0 then break end
                pcall(function()
                    hum.Health = 0
                    hum:TakeDamage(9e9)
                end)
            end
        end)
    end
end

-- [TAB MAIN - KILL AURA]
MainTab:AddToggle({
    Name = "KÃ­ch hoáº¡t Kill Aura (Siu & NPC)",
    Default = false,
    Callback = function(state)
        killAuraEnabled = state
        if killAuraEnabled then
            if selectedTargetName == "ChÆ°a chá»n" then
                OrionLib:MakeNotification({Name = "Lá»—i", Content = "Vui lÃ²ng chá»n má»¥c tiÃªu!", Time = 3})
                return
            end
            task.spawn(function()
                while killAuraEnabled do
                    task.wait(0.1)
                    pcall(function()
                        sethiddenproperty(LocalPlayer, "SimulationRadius", 1e12)
                    end)
                    if selectedTargetName == "Siu_Owner" then
                        local boss = workspace:FindFirstChild("Siu_Owner")
                        if boss then killTarget(boss) end
                    else
                        local npcFolder = workspace:FindFirstChild("NPC DAMAGE")
                        if npcFolder then
                            local target = npcFolder:FindFirstChild(selectedTargetName)
                            if target then killTarget(target) end
                        end
                    end
                end
            end)
        end
    end    
})

dropdown = MainTab:AddDropdown({
    Name = "Chá»n má»¥c tiÃªu (Boss/NPC)",
    Default = "ChÆ°a chá»n",
    Options = targetList,
    Callback = function(value) selectedTargetName = value end    
})

MainTab:AddButton({Name = "LÃ m má»›i danh sÃ¡ch quÃ¡i", Callback = function() refreshTargetList() end})

-- [TAB AUTO SKILL - ÄÃƒ QUAY TRá»ž Láº I]
local function makeSkillToggle(tab, key)
    tab:AddToggle({
        Name = "Auto Skill " .. key,
        Default = false,
        Callback = function(state)
            getgenv()["autoskill" .. key:lower()] = state
            task.spawn(function()
                while getgenv()["autoskill" .. key:lower()] do
                    task.wait()
                    pcall(function()
                        for _, v in pairs(LocalPlayer.Character:GetChildren()) do
                            if v:IsA("Tool") and v:FindFirstChild(key) then
                                for _, c in pairs(v[key]:GetChildren()) do
                                    if c:IsA("RemoteEvent") then c:FireServer() end
                                end
                            end
                        end
                    end)
                end
            end)
        end
    })
end
for _, key in ipairs({"Z","X","C","V","B","N"}) do makeSkillToggle(SkillTab, key) end

SkillTab:AddToggle({
    Name = "Auto All Skills",
    Default = false,
    Callback = function(state)
        getgenv().autoallskills = state
        task.spawn(function()
            while getgenv().autoallskills do
                task.wait()
                pcall(function()
                    for _, v in pairs(LocalPlayer.Character:GetChildren()) do
                        if v:IsA("Tool") then
                            for _, key in ipairs({"Z","X","C","V","B","N"}) do
                                local skillFolder = v:FindFirstChild(key)
                                if skillFolder then
                                    for _, c in pairs(skillFolder:GetChildren()) do
                                        if c:IsA("RemoteEvent") then c:FireServer() end
                                    end
                                end
                            end
                        end
                    end
                end)
            end
        end)
    end
})

-- [TAB FRUIT - STORE & EAT 4 GUI]
FruitTab:AddButton({
    Name = "STORE AND EAT (DF, BOX, ARMOR, BOOK) ðŸ‘º",
    Callback = function()
        pcall(function()
            local Save = game:GetService("ReplicatedStorage"):WaitForChild("Save")
            local Tool = LocalPlayer.Character:FindFirstChildOfClass("Tool")
            Save:WaitForChild("SavingMelee"):FireServer(-5)
            Save:WaitForChild("SavingSword"):FireServer(-5)
            if Tool and Tool.Name:lower():find("fruit") then Save:WaitForChild("SavingEvent"):FireServer(1) end
            task.wait(0.2)
            local GuiList = {"BOXGUI", "ArmorBox", "DFGUI", "BOOKGUI"}
            for _, Name in pairs(GuiList) do
                local Gui = LocalPlayer.PlayerGui:FindFirstChild(Name)
                if Gui and Gui:FindFirstChild("Frame") and Gui.Frame:FindFirstChild("Sure") then
                    if Gui.Frame.Sure:FindFirstChild("EatScript") and Gui.Frame.Sure.EatScript:FindFirstChild("Eat") then
                        Gui.Frame.Sure.EatScript.Eat:FireServer()
                    end
                end
            end
        end)
    end
})

-- [TAB MISC - AUTO Lá»¤M]
MiscTab:AddToggle({
    Name = "Auto Lá»¥m 1000 Stud (An toÃ n)",
    Default = false,
    Callback = function(state)
        getgenv().AutoCollect = state
        if state then
            pcall(function()
                local map = workspace:FindFirstChild("MAP") or workspace:FindFirstChild("Map")
                if map then for _, v in pairs(map:GetDescendants()) do if v:IsA("ClickDetector") then v:Destroy() end end end
            end)
        end
        task.spawn(function()
            while getgenv().AutoCollect do
                pcall(function()
                    local hrp = LocalPlayer.Character.HumanoidRootPart
                    for _, v in pairs(workspace:GetChildren()) do
                        local h = v:IsA("BasePart") and v or v:FindFirstChild("Handle") or v:FindFirstChildOfClass("BasePart")
                        if h and h:FindFirstChild("TouchInterest") and (h.Position - hrp.Position).Magnitude <= 1000 then h.CFrame = hrp.CFrame end
                        for _, c in pairs(v:GetDescendants()) do
                            if c:IsA("ClickDetector") and (c.Parent.Position - hrp.Position).Magnitude <= 1000 then fireclickdetector(c) end
                        end
                    end
                end)
                task.wait(0.3)
            end
        end)
    end
})

refreshTargetList()
