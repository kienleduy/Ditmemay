local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/jensonhirst/Orion/main/source')))()
local Window = OrionLib:MakeWindow({
    Name = "ALL-IN-ONE MENU ðŸ‘º",
    HidePremium = true,
    SaveConfig = false,
    IntroEnabled = false
})

local MainTab = Window:MakeTab({Name = "Main"})
local QuestTab = Window:MakeTab({Name = "Auto Quest"})
local SkillTab = Window:MakeTab({Name = "Auto Skill"})
local FruitTab = Window:MakeTab({Name = "Fruit"})
local RandomTab = Window:MakeTab({Name = "Random & Lucky"})
local MiscTab = Window:MakeTab({Name = "Misc"})

local LocalPlayer = game.Players.LocalPlayer
local killAuraEnabled = false
local selectedTargetName = "ChÆ°a chá»n"
local targetList = {"ChÆ°a chá»n", "Siu_Owner"}
local dropdown

-- [HÃ€M KILL CHUáº¨N]
local function refreshTargetList()
    targetList = {"ChÆ°a chá»n", "Siu_Owner"}
    local npcFolder = workspace:FindFirstChild("NPC DAMAGE")
    if npcFolder then
        for _, model in ipairs(npcFolder:GetChildren()) do
            if model:IsA("Model") and model:FindFirstChildWhichIsA("Humanoid") then
                if model.Name ~= "Siu_Owner" then table.insert(targetList, model.Name) end
            end
        end
    end
    if dropdown then dropdown:Refresh(targetList, true) end
end

local function killTarget(model)
    if not model then return end
    local hum = model:FindFirstChildWhichIsA("Humanoid")
    if hum and hum.Health > 0 then
        task.spawn(function()
            for i = 1, 10 do 
                if hum.Health <= 0 then break end
                pcall(function()
                    hum.Health = 0
                    hum:TakeDamage(9e9)
                end)
            end
        end)
    end
end

-- [TAB MAIN - KILL AURA]
MainTab:AddToggle({
    Name = "KÃ­ch hoáº¡t Kill Aura (Siu & NPC)",
    Default = false,
    Callback = function(state)
        killAuraEnabled = state
        if killAuraEnabled then
            task.spawn(function()
                while killAuraEnabled do
                    task.wait(0.1)
                    pcall(function() sethiddenproperty(LocalPlayer, "SimulationRadius", 1e12) end)
                    if selectedTargetName == "Siu_Owner" then
                        local boss = workspace:FindFirstChild("Siu_Owner")
                        if boss then killTarget(boss) end
                    else
                        local npcFolder = workspace:FindFirstChild("NPC DAMAGE")
                        if npcFolder then
                            local target = npcFolder:FindFirstChild(selectedTargetName)
                            if target then killTarget(target) end
                        end
                    end
                end
            end)
        end
    end    
})
dropdown = MainTab:AddDropdown({Name = "Chá»n má»¥c tiÃªu", Default = "ChÆ°a chá»n", Options = targetList, Callback = function(v) selectedTargetName = v end})
MainTab:AddButton({Name = "LÃ m má»›i danh sÃ¡ch quÃ¡i", Callback = function() refreshTargetList() end})

-- [TAB AUTO QUEST]
local SelectedQuest = ""
local AutoQuestEnabled = false
local QuestNPCs = {}
local function refreshQuestList()
    QuestNPCs = {}
    pcall(function()
        if workspace:FindFirstChild("NPCS") then
            for _, v in pairs(workspace.NPCS:GetChildren()) do
                if v:FindFirstChild("ClickPart") then table.insert(QuestNPCs, v.Name) end
            end
        end
    end)
end
refreshQuestList()
QuestTab:AddDropdown({Name = "Chá»n NPC Quest", Default = "ChÆ°a chá»n", Options = QuestNPCs, Callback = function(v) SelectedQuest = v end})
QuestTab:AddToggle({
    Name = "Auto Nháº­n Quest",
    Default = false,
    Callback = function(state)
        AutoQuestEnabled = state
        task.spawn(function()
            while AutoQuestEnabled do
                task.wait(0.5)
                pcall(function()
                    if SelectedQuest ~= "" then
                        local npc = workspace.NPCS:FindFirstChild(SelectedQuest)
                        if npc then
                            local remote = npc.ClickPart.QuestTake.QuestTake:FindFirstChildOfClass("RemoteEvent")
                            if remote then remote:FireServer() end
                        end
                    end
                end)
            end
        end)
    end
})

-- [TAB AUTO SKILL]
local function makeSkillToggle(tab, key)
    tab:AddToggle({
        Name = "Auto Skill " .. key,
        Default = false,
        Callback = function(state)
            getgenv()["autoskill" .. key:lower()] = state
            task.spawn(function()
                while getgenv()["autoskill" .. key:lower()] do
                    task.wait()
                    pcall(function()
                        for _, v in pairs(LocalPlayer.Character:GetChildren()) do
                            if v:IsA("Tool") and v:FindFirstChild(key) then
                                for _, c in pairs(v[key]:GetChildren()) do if c:IsA("RemoteEvent") then c:FireServer() end end
                            end
                        end
                    end)
                end
            end)
        end
    })
end
for _, key in ipairs({"Z","X","C","V","B","N"}) do makeSkillToggle(SkillTab, key) end

-- [TAB FRUIT - STORE & EAT 4 GUI]
FruitTab:AddButton({
    Name = "STORE AND EAT (4 GUI) ðŸ‘º",
    Callback = function()
        pcall(function()
            local Save = game:GetService("ReplicatedStorage"):WaitForChild("Save")
            local Tool = LocalPlayer.Character:FindFirstChildOfClass("Tool")
            Save:WaitForChild("SavingMelee"):FireServer(-5)
            Save:WaitForChild("SavingSword"):FireServer(-5)
            if Tool and Tool.Name:lower():find("fruit") then Save:WaitForChild("SavingEvent"):FireServer(1) end
            task.wait(0.2)
            for _, Name in pairs({"BOXGUI", "ArmorBox", "DFGUI", "BOOKGUI"}) do
                local Gui = LocalPlayer.PlayerGui:FindFirstChild(Name)
                if Gui and Gui:FindFirstChild("Frame") and Gui.Frame:FindFirstChild("Sure") then
                    if Gui.Frame.Sure:FindFirstChild("EatScript") then Gui.Frame.Sure.EatScript.Eat:FireServer() end
                end
            end
        end)
    end
})

-- [TAB RANDOM & LUCKY SPIN]
local rollAmount = 1
RandomTab:AddTextbox({Name = "Sá»‘ lÆ°á»£ng", Default = "1", Callback = function(v) rollAmount = tonumber(v) or 1 end})
RandomTab:AddButton({
    Name = "Lucky Spin ðŸ‘º",
    Callback = function()
        local args = { { true, { Legendary = false, Common = false, Rare = false, Mythical = false, Secret = false }, rollAmount } }
        pcall(function() LocalPlayer.PlayerGui.Random.Bright:FireServer(unpack(args)) end)
    end
})

-- [TAB MISC - AUTO NHáº¶T ITEM DROP (CLICK DETECTOR)]
MiscTab:AddToggle({
    Name = "Auto Nháº·t Item 1000 Stud (0.3s)",
    Default = false,
    Callback = function(state)
        getgenv().AutoCollectItems = state
        task.spawn(function()
            while getgenv().AutoCollectItems do
                pcall(function()
                    local hrp = LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
                    if not hrp then return end

                    -- QuÃ©t toÃ n bá»™ Workspace Ä‘á»ƒ tÃ¬m ClickDetector (DÃ nh cho item drop nhÆ° MinhHammer-Box)
                    for _, v in pairs(workspace:GetChildren()) do
                        -- Kiá»ƒm tra náº¿u lÃ  Model hoáº·c Part rá»›t ra
                        local cd = v:FindFirstChildWhichIsA("ClickDetector", true)
                        if cd then
                            local parentPart = cd.Parent
                            if parentPart:IsA("BasePart") then
                                if (parentPart.Position - hrp.Position).Magnitude <= 1000 then
                                    fireclickdetector(cd)
                                end
                            end
                        end
                        
                        -- Váº«n giá»¯ logic hÃºt part cÃ³ TouchInterest (TrÃ¡i Ã¡c quá»·, item thÆ°á»ng)
                        local touch = v:FindFirstChildWhichIsA("TouchInterest", true)
                        if touch then
                            local h = touch.Parent
                            if h:IsA("BasePart") and (h.Position - hrp.Position).Magnitude <= 1000 then
                                h.CFrame = hrp.CFrame
                            end
                        end
                    end
                end)
                task.wait(0.3) -- Tá»‘c Ä‘á»™ 0.3s theo yÃªu cáº§u
            end
        end)
    end
})

refreshTargetList()
