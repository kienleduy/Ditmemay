-- Hàm kích hoạt tất cả ClickDetector
local function fireAllClickDetectors(player)
    -- Lấy tất cả các đối tượng là ClickDetector trong Workspace
    for _, detector in ipairs(workspace:GetDescendants()) do
        if detector:IsA("ClickDetector") then
            -- Kích hoạt sự kiện MouseClick
            -- player là người chơi giả lập đã click vào nó
            detector:FireClick(player)
        end
    end
end

-- Ví dụ: Kích hoạt sau 5 giây khi server start
task.wait(0,001)

-- Lấy đại diện một Player nếu cần (vì FireClick yêu cầu một Player object)
local Players = game:GetService("Players")
local dummyPlayer = Players:GetPlayers()[1] 

if dummyPlayer then
    print("Đang kích hoạt tất cả ClickDetector...")
    fireAllClickDetectors(dummyPlayer)
else
    print("Không tìm thấy người chơi nào để thực hiện click.")
end
