local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/jensonhirst/Orion/main/source')))()
local Window = OrionLib:MakeWindow({
    Name = "ALL-IN-ONE MENU ðŸ‘º",
    HidePremium = true,
    SaveConfig = false,
    IntroEnabled = false
})

local MainTab = Window:MakeTab({Name = "Main"})
local QuestTab = Window:MakeTab({Name = "Auto Quest"})
local SkillTab = Window:MakeTab({Name = "Auto Skill"})
local FruitTab = Window:MakeTab({Name = "Fruit"})
local RandomTab = Window:MakeTab({Name = "Random & Lucky"})
local MiscTab = Window:MakeTab({Name = "Misc"})

local LocalPlayer = game.Players.LocalPlayer

-- [HÃ€M KILL Tá»”NG Há»¢P]
local function killTarget(model)
    if not model then return end
    local hum = model:FindFirstChildWhichIsA("Humanoid")
    if hum and hum.Health > 0 then
        task.spawn(function()
            for i = 1, 15 do
                if hum.Health <= 0 then break end
                pcall(function()
                    hum.Health = 0
                    hum:TakeDamage(1e18)
                end)
            end
        end)
    end
end

-- [TAB MAIN]
MainTab:AddToggle({
    Name = "Auto Kill Siu Owner (Boss Spawn lÃ  Die)",
    Default = false,
    Callback = function(state)
        getgenv().AutoKillSiu = state
        task.spawn(function()
            while getgenv().AutoKillSiu do
                task.wait(0.1)
                pcall(function()
                    local boss = workspace:FindFirstChild("Siu_Owner")
                    if boss then killTarget(boss) end
                end)
            end
        end)
    end
})

local selectedTargetName = "ChÆ°a chá»n"
local targetList = {"ChÆ°a chá»n"}
local dropdown
local function refreshTargetList()
    targetList = {"ChÆ°a chá»n"}
    local npcFolder = workspace:FindFirstChild("NPC DAMAGE")
    if npcFolder then
        for _, model in ipairs(npcFolder:GetChildren()) do
            if model:IsA("Model") and model:FindFirstChildWhichIsA("Humanoid") then
                table.insert(targetList, model.Name)
            end
        end
    end
    if dropdown then dropdown:Refresh(targetList, true) end
end

MainTab:AddToggle({
    Name = "Kill Aura QuÃ¡i Chá»n (Dropdown)",
    Default = false,
    Callback = function(state)
        getgenv().KillSelected = state
        task.spawn(function()
            while getgenv().KillSelected do
                task.wait(0.1)
                pcall(function()
                    if selectedTargetName ~= "ChÆ°a chá»n" then
                        local npcFolder = workspace:FindFirstChild("NPC DAMAGE")
                        if npcFolder then
                            local target = npcFolder:FindFirstChild(selectedTargetName)
                            if target then killTarget(target) end
                        end
                    end
                end)
            end
        end)
    end    
})

dropdown = MainTab:AddDropdown({
    Name = "Chá»n quÃ¡i NPC DAMAGE",
    Default = "ChÆ°a chá»n",
    Options = targetList,
    Callback = function(value) selectedTargetName = value end    
})
MainTab:AddButton({Name = "LÃ m má»›i danh sÃ¡ch", Callback = function() refreshTargetList() end})

-- [TAB AUTO QUEST]
local SelectedQuest = ""
local AutoQuestEnabled = false
local QuestNPCs = {}
local function refreshQuestList()
    QuestNPCs = {}
    pcall(function()
        for _, v in pairs(workspace.NPCS:GetChildren()) do
            if v:FindFirstChild("ClickPart") then table.insert(QuestNPCs, v.Name) end
        end
        local Kaido = workspace:FindFirstChild("Map-Islands") and workspace["Map-Islands"]:FindFirstChild("Kaido Island [ Lv 1000+ ]")
        if Kaido then
            for _, v in pairs(Kaido:GetChildren()) do
                if v.Name:find("QUEST") then table.insert(QuestNPCs, v.Name) end
            end
        end
    end)
end
refreshQuestList()

QuestTab:AddDropdown({
    Name = "Chá»n Quest NPC",
    Default = "ChÆ°a chá»n",
    Options = QuestNPCs,
    Callback = function(Value) SelectedQuest = Value end
})

QuestTab:AddToggle({
    Name = "Tá»± Ä‘á»™ng nháº­n Quest",
    Default = false,
    Callback = function(state)
        AutoQuestEnabled = state
        task.spawn(function()
            while AutoQuestEnabled do
                task.wait(0.5)
                pcall(function()
                    if SelectedQuest ~= "" then
                        local TargetNPC = workspace.NPCS:FindFirstChild(SelectedQuest) or (workspace["Map-Islands"]["Kaido Island [ Lv 1000+ ]"] and workspace["Map-Islands"]["Kaido Island [ Lv 1000+ ]"]:FindFirstChild(SelectedQuest))
                        if TargetNPC then
                            local QuestTake = TargetNPC.ClickPart.QuestTake.QuestTake
                            for _, remote in pairs(QuestTake:GetDescendants()) do
                                if remote:IsA("RemoteEvent") and remote.Name == "RemoteEvent" then remote:FireServer() end
                            end
                        end
                    end
                end)
            end
        end)
    end
})

-- [TAB AUTO SKILL]
local function makeSkillToggle(tab, key)
    tab:AddToggle({
        Name = "Auto Skill " .. key,
        Default = false,
        Callback = function(state)
            getgenv()["autoskill" .. key:lower()] = state
            task.spawn(function()
                while getgenv()["autoskill" .. key:lower()] do
                    task.wait()
                    pcall(function()
                        for _, v in pairs(LocalPlayer.Character:GetChildren()) do
                            if v:IsA("Tool") and v:FindFirstChild(key) then
                                for _, c in pairs(v[key]:GetChildren()) do
                                    if c:IsA("RemoteEvent") then c:FireServer() end
                                end
                            end
                        end
                    end)
                end
            end)
        end
    })
end
for _, key in ipairs({"Z","X","C","V","B","N"}) do makeSkillToggle(SkillTab, key) end

-- [TAB FRUIT - STORE & EAT Cáº¬P NHáº¬T]
FruitTab:AddButton({
    Name = "STORE AND EAT (Cáº§m Fruit trÃªn tay)",
    Callback = function()
        pcall(function()
            local Save = game:GetService("ReplicatedStorage"):WaitForChild("Save")
            local Tool = LocalPlayer.Character:FindFirstChildOfClass("Tool")
            
            -- Store
            Save:WaitForChild("SavingMelee"):FireServer(-5)
            Save:WaitForChild("SavingSword"):FireServer(-5)
            
            if Tool and Tool.Name:lower():find("fruit") then
                Save:WaitForChild("SavingEvent"):FireServer(1)
            end
            
            task.wait(0.2)
            
            -- Eat (Cáº­p nháº­t logic theo nÃ­ gá»­i)
            local GuiNames = {"BOXGUI", "ArmorBox", "DFGUI"}
            for _, Name in pairs(GuiNames) do
                local Gui = LocalPlayer.PlayerGui:FindFirstChild(Name)
                if Gui and Gui:FindFirstChild("Frame") and Gui.Frame:FindFirstChild("Sure") then
                    if Gui.Frame.Sure:FindFirstChild("EatScript") then
                        Gui.Frame.Sure.EatScript.Eat:FireServer()
                    end
                end
            end
        end)
    end
})

-- [TAB RANDOM & LUCKY]
local rollAmount = 1
RandomTab:AddTextbox({
	Name = "Nháº­p sá»‘ lÆ°á»£ng (Spin / Lucky)",
	Default = "1",
	TextDisappear = false,
	Callback = function(Value) rollAmount = tonumber(Value) or 1 end	  
})

RandomTab:AddButton({
	Name = "Báº¯t Ä‘áº§u Random ThÆ°á»ng",
	Callback = function()
		local args = { { false, { Legendary = false, Common = false, Rare = false, Mythical = false, Secret = false }, rollAmount } }
		pcall(function() LocalPlayer.PlayerGui.Random.Bright:FireServer(unpack(args)) end)
	end
})

RandomTab:AddButton({
	Name = "Báº¯t Ä‘áº§u Lucky Spin ðŸ‘º",
	Callback = function()
		local args = { { true, { Legendary = false, Common = false, Rare = false, Mythical = false, Secret = false }, rollAmount } }
		pcall(function() LocalPlayer.PlayerGui.Random.Bright:FireServer(unpack(args)) end)
	end
})

-- [TAB MISC - AUTO Lá»¤M 1000ST + XÃ“A CLICK SHOP]
MiscTab:AddToggle({
    Name = "Auto Lá»¥m 1000 Stud (XÃ³a Click Shop)",
    Default = false,
    Callback = function(state)
        getgenv().AutoCollect = state
        
        -- XÃ³a ClickDetector trong MAP
        if state then
            pcall(function()
                local mapFolder = workspace:FindFirstChild("MAP") or workspace:FindFirstChild("Map")
                if mapFolder then
                    for _, v in pairs(mapFolder:GetDescendants()) do
                        if v:IsA("ClickDetector") then v:Destroy() end
                    end
                end
            end)
        end

        task.spawn(function()
            while getgenv().AutoCollect do
                pcall(function()
                    local hrp = LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
                    if not hrp then return end
                    for _, v in pairs(workspace:GetChildren()) do
                        -- HÃºt Ä‘á»“ rÆ¡i
                        local h = v:IsA("BasePart") and v or (v:IsA("Model") and (v:FindFirstChild("Handle") or v:FindFirstChildOfClass("BasePart")))
                        if h and h:FindFirstChild("TouchInterest") then
                            if (h.Position - hrp.Position).Magnitude <= 1000 then h.CFrame = hrp.CFrame end
                        end
                        -- Click Ä‘á»“ Boss (Map Ä‘Ã£ bá»‹ xÃ³a click nÃªn an toÃ n)
                        for _, c in pairs(v:GetDescendants()) do
                            if c:IsA("ClickDetector") and c.Parent:IsA("BasePart") then
                                if (c.Parent.Position - hrp.Position).Magnitude <= 1000 then fireclickdetector(c) end
                            end
                        end
                    end
                end)
                task.wait(0.3)
            end
        end)
    end
})

refreshTargetList()
MainTab:AddButton({Name = "ÄÃ³ng GUI", Callback = function() OrionLib:Destroy() end})
